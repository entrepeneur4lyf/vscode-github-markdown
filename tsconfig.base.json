{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["ES2022"],
    "module": "ESNext",
    "target": "ES2022",

    "moduleResolution": "Node",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "moduleDetection": "force",

    "allowJs": true,
    "esModuleInterop": true,

    // best practices
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "composite": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true
  }
}
