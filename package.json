{
  "name": "vscode-github-markdown",
  "displayName": "GitHub Markdown Preview",
  "version": "4.0.0-development",
  "description": "GitHub Style Markdown preview for Visual Studio Code",
  "categories": [
    "Other"
  ],
  "keywords": [
    "github",
    "github markdown",
    "markdown",
    "markdown style",
    "markdown theme"
  ],
  "homepage": "https://github.com/lzm0x219/vscode-github-markdown#readme",
  "bugs": {
    "url": "https://github.com/lzm0x219/vscode-github-markdown/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lzm0x219/vscode-github-markdown.git"
  },
  "license": "MIT",
  "author": {
    "name": "明夷居士"
  },
  "publisher": "lzm0x219",
  "main": "./dist/extension.js",
  "browser": "./dist/extension.web.js",
  "scripts": {
    "dev": "bun build --entrypoints ./src/extension.ts --outfile ./dist/extension.js --target node --external:vscode --watch",
    "dev:browser": "bun build --entrypoints ./src/extension.ts --outfile ./dist/extension.browser.js --target browser --external:vscode --watch",
    "package": "vsce package --no-dependencies",
    "package:pre": "vsce package --pre-release --no-dependencies",
    "preview:web": "vscode-test-web --extensionDevelopmentPath=. .",
    "release": "vsce publish --no-dependencies",
    "release:pre": "vsce publish --pre-release --no-dependencies",
    "vscode:prepublish": "bun run build"
  },
  "lint-staged": {
    "*.{ts,tsx,js,cjs}": [
      "prettier --write"
    ],
    "*.{md,html,css,json,yml}": "prettier --write",
    "!(*pnpm-lock).yaml": "prettier --write"
  },
  "devDependencies": {
    "@types/markdown-it": "14.1.1",
    "@types/node": "20.14.9",
    "@types/vscode": "1.90.0",
    "@vscode/test-web": "0.0.55",
    "@vscode/vsce": "2.29.0",
    "husky": "9.0.11",
    "is-ci": "3.0.1",
    "lint-staged": "15.2.7",
    "prettier": "3.3.2",
    "prettier-plugin-packagejson": "2.5.0",
    "typescript": "5.5.2"
  },
  "packageManager": "pnpm@9.4.0",
  "engines": {
    "vscode": "^1.83.0"
  },
  "icon": "resources/logo.png",
  "pricing": "Free"
}
